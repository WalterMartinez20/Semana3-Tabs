<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_tabs" >

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_pr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_bright">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAuto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_auto"
            android:text="@string/auto1" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAuto2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_auto"
            android:text="@string/auto2" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAuto3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_auto"
            android:text="@string/auto3" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabAuto4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/icono_auto"
            android:text="@string/auto4" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_pr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auto_fondo"></androidx.viewpager.widget.ViewPager>
</LinearLayout>